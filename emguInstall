#!/bin/bash

sudo apt install build-essential libtiff5-dev libgeotiff-dev libgtk-3-dev libgstreamer1.0-dev libavcodec-dev libswscale-dev libavformat-dev libopenexr-dev libdc1394-dev libv4l-dev libeigen3-dev libopengl-dev cmake-curses-gui freeglut3-dev git libvtk9-dev qtbase5-dev -y
